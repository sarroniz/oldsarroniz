@article{arroniz2018c,
  abbr={Manuscript},
  title={Impoliteness strategies in the L2 classroom setting{:} Conventionalized formulaic sequences in Spanish.},
  author={Arróniz, S.},
  year={2018},
  abstract={The present study aims to investigate the acquisition of impoliteness formulaic sequences in Spanish as a second language in the classroom setting. For those purposes, we want to observe the number of impolite expressions that students at different levels of proficiency know, and if they can use them in context. We will use two different tasks in our study. The first one is a recognition task, based in Bardovi-Harlig and Bastos (2010). With this instrument, we aim to see if students can recognize impolite formulas. In the second task, a production task, we used an oral DCT with 12 different situations, and for each of them, we ask the students to provide an oral response. We will analyze the data obtained with these two instruments and categorize the productions according to Culpeper’s (2011, 2017) taxonomy of conventionalized impolite expressions. We propose that because students are not very familiar with this type of language, a pedagogical intervention could be proposed in a future study to include these expressions in the L2 Spanish classroom.},
}

